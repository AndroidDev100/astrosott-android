                    android:clickable="true"
                    android:contentDescription="@string/partner_icon"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    tools:targetApi="m" />

                <ImageView
                    android:id="@+id/iv_zee"
                    android:layout_width="@dimen/viu_item_width"
                    android:layout_height="@dimen/viu_item_height"
