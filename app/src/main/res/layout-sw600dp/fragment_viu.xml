                    android:layout_marginRight="@dimen/viu_apps_margin"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/partner_icon"
                    android:elevation="4dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    tools:targetApi="m" />

                <ImageView
                    android:id="@+id/iv_alt_balaji"
                    android:layout_width="@dimen/viu_item_width"
                    android:layout_height="@dimen/viu_item_height"
                    android:layout_marginLeft="@dimen/viu_apps_margin"
                    android:layout_marginTop="@dimen/viu_apps_margin"
                    android:layout_marginRight="@dimen/viu_apps_margin"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/partner_icon"
