<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lnpaymentMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen8dp"
            android:background="@drawable/payment_item_background"
            android:padding="@dimen/dimen16dp"
            android:layout_marginLeft="@dimen/dimen16dp"
            android:layout_marginRight="@dimen/dimen16dp"
            android:layout_marginBottom="@dimen/dimen8dp">

<!--            <RadioButton-->
<!--                android:id="@+id/radioPaymentSeletor"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight=".2"-->
<!--                android:button="@drawable/payment_radio_button_selector"-->
<!--                android:textColor="@color/white" />-->
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioPaymentSeletor"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="match_parent"
                android:button="@drawable/radio_button_selector"
                android:clickable="false"
                />
            <TextView
                android:id="@+id/txtPaymentMethod"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="1"
                android:textColor="@color/cancel_text"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/txtPaymentNumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center|end"
                android:maxLines="1"
                android:textColor="@color/cancel_text"
                android:textSize="@dimen/sp15" />
        </androidx.appcompat.widget.LinearLayoutCompat>


</layout>