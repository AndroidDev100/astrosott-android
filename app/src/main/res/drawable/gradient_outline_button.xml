<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:endColor="#5618eb"
                android:centerColor="#3e68dc"
                android:startColor="#2ba9cf" />
            <corners android:radius="25dp" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#151024" />
            <corners android:radius="25dp" />
            <size
                android:width="50dp"
                android:height="50dp" />

        </shape>
    </item>
</layer-list>