    <style name="MySeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/thumb_color</item>
        <item name="colorControlActivated">@color/primary_blue</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="splashtheme"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Custom.Widget.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/transparentColor</item>
    </style>
