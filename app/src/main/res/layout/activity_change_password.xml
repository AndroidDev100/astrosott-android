<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grape_purple"
        tools:context=".activities.forgotPassword.ui.ChangePasswordActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen16dp"
            android:layout_marginTop="@dimen/dimen16dp"
            android:padding="@dimen/_6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ic_arrow_back_24px"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ProgressBar>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/sooka"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"></ImageView>

            <TextView
                android:id="@+id/forgot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/forget_psw"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo"></TextView>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/heebo_regular"
                android:text="@string/new_psw_para"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/forgot_title"></TextView>

            <LinearLayout
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/_23dp"
                android:layout_marginRight="@dimen/dimen18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description"
                android:background="@drawable/search_linear_bg"
                android:orientation="vertical"
                android:layout_height="@dimen/_56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:background="@null"
                android:id="@+id/new_password_edt"
                android:layout_marginLeft="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:fontFamily="@font/heebo_regular"
                android:textColorHint="@color/grey"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/cursor_color"
                android:hint="@string/new_psw"
                android:importantForAutofill="no"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"
                android:textSize="@dimen/_16sp"
                android:singleLine="true"
                android:textColor="@color/white"
                />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/dimen15dp"
                android:layout_marginRight="@dimen/dimen18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_password"
                android:background="@drawable/search_linear_bg"
                android:orientation="vertical"
                android:layout_height="@dimen/_56dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen18dp"
                android:layout_marginRight="@dimen/dimen18dp"
                android:layout_weight="1.9"
                android:background="@null"
                android:id="@+id/confirm_password_edt"
                android:fontFamily="@font/heebo_regular"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/_16sp"
                android:hint="@string/confirm_psw"
                android:importantForAutofill="no"
                android:inputType="text|textNoSuggestions"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_password" />
            </LinearLayout>

            <TextView
                android:id="@+id/error_passsword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen16dp"
                android:text="Confirm password does't match with password"
                android:textColor="@color/red_live"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirm_password"></TextView>

            <TextView
                android:id="@+id/update"
                android:layout_width="@dimen/dimen250dp"
                android:layout_height="@dimen/dimen45dp"
                android:layout_marginTop="@dimen/dimen30dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/heebo_medium"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirm_password"></TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>