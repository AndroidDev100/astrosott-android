<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@color/toolbar_bg"
        android:padding="@dimen/search_toolbar_padding_right">


        <ImageView
            android:id="@+id/home_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/search_item_margin_end"
            android:background="@drawable/ic_back"
            android:contentDescription="@string/back_icon"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/tvSearchResultHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/search_toolbar_header_margin"
            android:layout_marginEnd="@dimen/search_toolbar_padding_right"
            android:layout_toEndOf="@+id/home_icon_back"
            android:ellipsize="end"
            android:fontFamily="@font/heebo_medium"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_medium" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/search_item_margin_end"
            android:background="@drawable/ic_clear_black_24dp"
            android:contentDescription="@string/close_icon"
            android:visibility="gone"
            tools:ignore="ContentDescription"
            app:tint="@color/white" />


    </RelativeLayout>


</layout>