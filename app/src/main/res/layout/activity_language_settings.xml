<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_three"
    android:id="@+id/header">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/search_item_title_color"
        android:id="@+id/toolbar">
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:id="@+id/back_button"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_8sdp"
            android:src="@drawable/back_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/title"
        android:textAllCaps="true"
        android:textSize="@dimen/_15sdp"
         android:gravity="center"
        android:layout_marginStart="@dimen/_25sdp"
        android:text="@string/language_selection"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp">
</TextView>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_app_lang"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_1sdp"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/App_language"
            android:textAllCaps="false"
            android:id="@+id/tv_appLanguage"
           android:layout_alignParentLeft="true"
            ></TextView>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_forward"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_below="@+id/rl_app_lang"
        android:id="@+id/v1"
        android:background="@color/lineGreyColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_audio_lang"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/rl_app_lang"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_1sdp"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/Audio_language"
            android:textAllCaps="false"
            android:id="@+id/tv_audioLanguage"
            android:layout_alignParentLeft="true"
            ></TextView>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_forward"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_below="@+id/rl_audio_lang"
        android:id="@+id/v2"
        android:background="@color/lineGreyColor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_subtitle_lang"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/rl_audio_lang"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_1sdp"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_10sdp"
            android:text="@string/Subtitle_language"
            android:textAllCaps="false"
            android:id="@+id/tv_subtitleLanguage"
            android:layout_alignParentLeft="true"
            ></TextView>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_forward"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_below="@+id/rl_subtitle_lang"
        android:id="@+id/v3"
        android:background="@color/lineGreyColor"/>
</RelativeLayout>
</layout>