<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_schedule_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
    >
        <TextView
            android:id="@+id/thumbnail_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:textSize="@dimen/schedule_chip_text_size"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/schedule_chip_padding_left"
            android:paddingRight="@dimen/schedule_chip_padding_left"
            android:paddingTop="@dimen/schedule_chip_padding_top"
            android:paddingBottom="@dimen/schedule_chip_padding_top"
            android:background="@drawable/text_view_bg_selector"/>
    </LinearLayout>
