<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tile"
            type="com.dialog.dialoggo.beanModel.ksBeanmodel.RailCommonData" />

        <variable
            name="image"
            type="com.dialog.dialoggo.beanModel.ksBeanmodel.AssetCommonImages" />
    </data>

    <LinearLayout
        android:layout_width="@dimen/_74sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:filterTouchesWhenObscured="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/creator_lay"
            android:layout_width="@dimen/_74sdp"
            android:layout_height="@dimen/_74sdp"
            android:background="@drawable/creator_name_background"
            android:gravity="center">

            <TextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/creator_name_size" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/itemImage"
                android:layout_width="@dimen/_74sdp"
                android:layout_height="@dimen/_74sdp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/ivPlayVideo"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/play_icon"
                android:visibility="gone" />

        </FrameLayout>

        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:minHeight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:progress="50"
            android:thumb="@color/gray"
            android:thumbTint="@android:color/transparent"
            tools:targetApi="lollipop"
            android:visibility="gone" />

        <include
            android:id="@+id/media_type_layout"
            layout="@layout/cw_mediatype_item" />


    </LinearLayout>

</layout>