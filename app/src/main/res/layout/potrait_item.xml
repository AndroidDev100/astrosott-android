<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/potrait_item_width"
        android:layout_height="@dimen/potrait_item_height"
        android:background="@color/fragment_background_color"
        card_view:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_background_color"
            android:contentDescription="@string/potrait_item_image"
            android:scaleType="fitXY" />
        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:minHeight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_background"
            android:thumb="@color/gray"
            android:thumbTint="@android:color/transparent"
            android:visibility="gone"
            tools:targetApi="lollipop" />
        <ImageView
            android:id="@+id/hungama"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/playpurple"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"></ImageView>
        <include
            android:id="@+id/exclusive_layout"
            layout="@layout/exclusive_item" />
    </androidx.cardview.widget.CardView>

</layout>