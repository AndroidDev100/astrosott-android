<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tile"
            type="com.astro.sott.beanModel.ksBeanmodel.RailCommonData" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <include
            android:id="@+id/metas"
            layout="@layout/metas_layout"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            ></include>

        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/grape_purple"
            card_view:cardCornerRadius="9dp"
            card_view:cardElevation="1dp"
            card_view:cardMaxElevation="1dp"
            android:clipChildren="false"
            android:layout_marginTop="@dimen/_8sdp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:background="@drawable/ic_potrait_placeholder"
                        android:contentDescription="TODO"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/ivPlayVideo"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/play_icon"
                        android:visibility="gone" />
                    <include
                        android:visibility="gone"
                        android:id="@+id/exclusive_layout"
                        layout="@layout/exclusive_item" />
                </RelativeLayout>

                <SeekBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:progress="50"
                    android:thumb="@color/gray"
                    android:thumbTint="@android:color/transparent"
                    tools:targetApi="lollipop"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@color/grape_purple"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingTop="@dimen/_2sdp"

                            />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/white"

                            android:paddingBottom="@dimen/_2sdp"
                            android:textSize="@dimen/_9sdp" />


                    </LinearLayout>

                </RelativeLayout>

                <include
                    android:visibility="gone"
                    android:id="@+id/media_type_layout"
                    layout="@layout/cw_mediatype_item" />
            </LinearLayout>
            <ImageView
                android:id="@+id/billing_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_star_ribbon"
                android:elevation="2dp"
                android:layout_gravity="right|top"
                android:visibility="gone">

            </ImageView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>