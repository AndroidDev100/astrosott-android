<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_toolbar"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/heebo_bold"
                android:lineHeight="24sp"
                android:text="VIP"
                android:textColor="@color/title_color"
                android:textSize="@dimen/font_medium_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <TextView
                android:id="@+id/currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:text="MYR 20.00"
                android:textColor="@color/title_color"
                android:textSize="@dimen/font_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/plan_name"></TextView>

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:text="Period: 24/1/21 - 24/2/21"
                android:textColor="@color/plan_period_color"
                android:textSize="@dimen/font_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/currency"></TextView>

            <TextView
                android:id="@+id/renew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:text="Renews: 25/2/21"
                android:textColor="@color/plan_period_color"
                android:textSize="@dimen/font_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/period"></TextView>

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:text="Payment Method:"
                android:textColor="@color/plan_period_color"
                android:textSize="@dimen/font_small"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/renew"></TextView>

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:text="@string/cancel_plan"
                android:textColor="@color/cancel_red_color"
                android:textSize="@dimen/font_medium_large"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_method"></TextView>


            <TextView
                android:id="@+id/change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/heebo_medium"
                android:lineHeight="24sp"
                android:layout_marginRight="16dp"
                android:text="@string/change_plan"
                android:textColor="@color/green"
                android:textSize="@dimen/font_medium_large"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/payment_method"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>