<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tile"
            type="com.astro.sott.beanModel.ksBeanmodel.RailCommonData" />

    </data>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardBackgroundColor="@color/blackColor"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
        <include
            android:id="@+id/metas"
            layout="@layout/metas_layout"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_gravity="top|right"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_135sdp"
                    android:background="@drawable/portrait"
                    android:contentDescription="TODO"
                    android:scaleType="fitXY" />
                <ImageView
                    android:id="@+id/ivPlayVideo"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@drawable/play_icon"
                    android:visibility="gone" />
                <include
                    android:visibility="gone"
                    android:id="@+id/exclusive_layout"
                    layout="@layout/exclusive_item" />
            </RelativeLayout>

            <SeekBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:minHeight="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="0dp"
                android:progress="50"
                android:thumb="@color/gray"
                android:thumbTint="@android:color/transparent"
                tools:targetApi="lollipop"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/titleLayout"
                android:layout_width="@dimen/potrait_item_width"
                android:layout_height="wrap_content"
                android:background="@color/search_toolbar_background"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:visibility="visible"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:visibility="visible"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

            </RelativeLayout>

            <include
                android:visibility="gone"
                android:id="@+id/media_type_layout"
                layout="@layout/cw_mediatype_item" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>