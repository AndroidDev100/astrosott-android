<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/potrait_listing_item_width"
        android:layout_height="@dimen/potrait_listing_item_height"
        card_view:cardCornerRadius="4dp"
        android:background="@color/fragment_background_color"
        >

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_background_color"
            android:contentDescription="@string/potrait_item_image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_potrait_placeholder"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintDimensionRatio="H,9:16"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
        <SeekBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:minHeight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_background"
            android:thumb="@color/gray"
            android:thumbTint="@android:color/transparent"
            tools:targetApi="lollipop" />

        <include
            android:id="@+id/exclusive_layout"
            layout="@layout/exclusive_item" />
    </androidx.cardview.widget.CardView>
</layout>