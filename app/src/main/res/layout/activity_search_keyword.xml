<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_bg"
    >
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_bg"
        tools:context=".activities.search.ui.SearchKeywordActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_icon"
        android:layout_marginStart="@dimen/_14sdp"
        android:src="@drawable/ic_back"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_17sdp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sort_by"
    android:textColor="@color/white"
    android:fontFamily="@font/heebo_bold"
    android:textSize="@dimen/_16sp"
    android:id="@+id/sort_by"
    android:layout_marginStart="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_14sdp"
    android:layout_below="@+id/back_icon"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/ll1"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_below="@+id/sort_by"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal">
<TextView
    android:id="@+id/sortATZ"
    android:layout_width="0dp"
    android:layout_height="@dimen/_35sdp"
    android:textSize="@dimen/_14sp"
    android:fontFamily="@font/heebo_medium"
    android:textAlignment="center"
    android:gravity="center"
    android:textColor="@color/grey_text"
    android:background="@color/edit_text_blue_bg"
    android:text="@string/atoz"
    android:layout_weight="1"/>
        <TextView
            android:id="@+id/sortPopular"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:layout_marginStart="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/popular"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/sortNewest"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/newest"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_type"
        android:textColor="@color/white"
        android:fontFamily="@font/heebo_bold"
        android:textSize="@dimen/_16sp"
        android:id="@+id/content_type"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_below="@+id/ll1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/ll2"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_below="@+id/content_type"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/contentTypeAll"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/all"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/contentTypeOnDemand"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:layout_marginStart="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/on_demand"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/contentTypeLive"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/live_home"
            android:layout_weight="1"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_paid"
        android:textColor="@color/white"
        android:fontFamily="@font/heebo_bold"
        android:textSize="@dimen/_16sp"
        android:id="@+id/free_paid"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_below="@+id/ll2"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/ll3"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_below="@+id/free_paid"
        android:layout_marginTop="@dimen/_6sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/freePaidAll"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/all"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/freePaidFree"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:layout_marginStart="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/free"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/freePaidPaid"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_14sp"
            android:fontFamily="@font/heebo_medium"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/grey_text"
            android:background="@color/edit_text_blue_bg"
            android:text="@string/paid"
            android:layout_weight="1"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl1"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_below="@+id/ll3">

        <TextView
            android:id="@+id/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/downloadable"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_download"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@+id/rl1"
        android:layout_marginBottom="@dimen/_74sdp">

    </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp"
        card_view:cardElevation="8dp"
        card_view:cardMaxElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        android:layout_alignParentBottom="true"
        card_view:cardBackgroundColor="@color/blue_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:weightSum="2">
            <TextView
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/white_outline_button"
                android:fontFamily="@font/heebo_medium"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/clear"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"
                android:layout_marginEnd="@dimen/_6sdp">

            </TextView>
            <TextView
                android:id="@+id/apply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@drawable/gradient_button"
                android:fontFamily="@font/heebo_medium"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/apply"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sp"
                >

            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/no_connection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <include
            android:id="@+id/connection"
            layout="@layout/no_connection">

        </include>

    </LinearLayout>
</RelativeLayout>

</layout>