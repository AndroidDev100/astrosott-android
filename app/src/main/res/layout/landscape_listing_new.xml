<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="tile"
            type="com.astro.sott.beanModel.ksBeanmodel.RailCommonData" />

    </data>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        card_view:cardBackgroundColor="@color/blackColor"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/landscape_listing_height">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/landscape_listing_height"
                        android:background="@drawable/landscape"
                        android:contentDescription="@string/image_description"
                        android:scaleType="fitXY" />

                    <include
                        android:visibility="gone"
                        android:id="@+id/exclusive_layout"
                        layout="@layout/exclusive_item" />


                    <ImageView
                        android:id="@+id/ivPlayVideo"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/play_icon"
                        android:contentDescription="@string/image_description"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/ivInfoIcon"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:contentDescription="@string/image_description" />
                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/image_description" />
                </LinearLayout>

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:progress="80"
                    android:progressDrawable="@drawable/progress_background"
                    android:thumb="@color/gray"
                    android:thumbTint="@android:color/transparent"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <include
                android:visibility="gone"
                android:id="@+id/media_type_layout"
                layout="@layout/mediatype_item"></include>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>