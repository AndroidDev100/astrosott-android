<?xml version="1.0" encoding="utf-8"?>
<layout >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginBottom="98dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/brightness"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_42dp"
            android:src="@drawable/ic_brightness_up"
            android:contentDescription="@string/contentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brightness"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_42dp"
            android:src="@drawable/ic_brightness_down"
            android:contentDescription="@string/contentDescription" />

        <FrameLayout

            android:id="@+id/brightness"
            android:layout_width="@dimen/dimen32dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen40dp">


            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="110dp"
                android:layout_height="@dimen/dimen32dp"
                android:layout_gravity="center"
                android:maxHeight="6dp"
                android:progress="30"
                android:progressDrawable="@drawable/seekbarprogress_style"
                android:rotation="270"
                android:thumb="@drawable/ic_thumb_icon"
                android:visibility="visible" />


        </FrameLayout>
    </RelativeLayout>
</layout>