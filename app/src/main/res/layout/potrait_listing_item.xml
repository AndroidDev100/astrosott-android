<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/potrait_listing_item_width"
        android:layout_height="@dimen/potrait_listing_item_height">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_background_color"
            android:contentDescription="@string/potrait_item_image"
            android:scaleType="fitXY"
            android:src="@drawable/portrait"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintDimensionRatio="H,9:16"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/hungama"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/playpurple"
            android:layout_margin="2dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"></ImageView>
        <include
            android:id="@+id/exclusive_layout"
            layout="@layout/exclusive_item" />
    </RelativeLayout>
</layout>