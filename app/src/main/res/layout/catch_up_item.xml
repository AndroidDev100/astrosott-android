<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/catchup_item"
        android:layout_width="@dimen/landscape_image_width"
        android:layout_height="@dimen/catchup_item_height"
        android:background="@drawable/border_line"
        android:layout_marginStart="@dimen/margin_top">
        <RelativeLayout
            android:id="@+id/rl_catchup_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/landscape_item_height">
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_landscape_placeholder"
                android:contentDescription="@string/image_description"
                android:layout_margin="1.5dp"/>
            <TextView
                android:id="@+id/txtLive"
                android:layout_width="@dimen/dimen30dp"
                android:layout_height="15dp"
                android:background="@color/primary_blue"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/sp10"
                android:text="@string/live_tag"
                android:layout_marginEnd="@dimen/dimen2dp"
                android:layout_marginTop="@dimen/dimen2dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txtNowPlaying"
                android:layout_width="@dimen/dimen60dp"
                android:layout_height="15dp"
                android:background="@color/primary_blue"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/sp10"
                android:text="@string/now_playing"
                android:layout_marginStart="@dimen/dimen2dp"
                android:layout_marginTop="@dimen/dimen2dp"
                android:visibility="gone"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_catchup_item"
            android:background="@color/transparentColor"
            android:paddingBottom="@dimen/dimen2dp"
            android:paddingTop="@dimen/dimen5dp"
            android:paddingEnd="@dimen/dimen5dp"
            android:paddingStart="@dimen/dimen5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/sp12"
                android:text=""
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:text=""
                android:textColor="@color/search_edit_text_color"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </RelativeLayout>

</layout>