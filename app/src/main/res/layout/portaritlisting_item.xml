<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="tile"
            type="com.astro.sott.beanModel.ksBeanmodel.RailCommonData" />

        <variable
            name="image"
            type="com.astro.sott.beanModel.ksBeanmodel.RailCommonData" />
    </data>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/_95sdp"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/blackColor"
        card_view:cardCornerRadius="@dimen/_2sdp"
        card_view:cardElevation="1dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_165sdp">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="@dimen/_95sdp"
                    android:layout_height="@dimen/_165sdp"
                    android:background="@drawable/portrait"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    />

                <include
                    android:visibility="gone"
                    android:id="@+id/exclusive_layout"
                    layout="@layout/exclusive_item" />

            </RelativeLayout>

            <include
                android:id="@+id/media_type_layout"
                layout="@layout/mediatype_item"></include>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>