<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_bg"
        tools:context=".activities.manageDevice.ui.ManageDeviceActivity">

        <include
            android:id="@+id/include"
            layout="@layout/fragment_toolbar"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:theme="@style/progressBarBlue"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"></ProgressBar>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <Button
                android:layout_width="250dp"
                android:layout_height="44dp"
                android:layout_below="@+id/recyclerview"
               android:layout_marginTop="32dp"
                android:fontFamily="@font/heebo_medium"
                android:textSize="16sp"
                android:id="@+id/logout_devices"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:text="@string/logout_all_devices"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:background="@drawable/gradient_button"/>
        </RelativeLayout>
    </LinearLayout>
</layout>