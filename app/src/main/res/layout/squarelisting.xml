<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tile"
            type="com.dialog.dialoggo.beanModel.ksBeanmodel.RailCommonData" />

        <variable
            name="image"
            type="com.dialog.dialoggo.beanModel.ksBeanmodel.AssetCommonImages" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp"
            card_view:cardMaxElevation="1dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/itemImage"
                        android:layout_width="90dp"
                        tools:ignore="ContentDescription"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:contentDescription="@string/banner_image" />

                    <include

                        android:id="@+id/exclusive_layout"
                        layout="@layout/exclusive_item"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/above_shado">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:gravity="start"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:visibility="gone" />

                    </RelativeLayout>

                </RelativeLayout>


                <include

                    android:id="@+id/media_type_layout"
                    layout="@layout/mediatype_item" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>