<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_bg"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/play_lay"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="155dp"
                    android:id="@+id/landscape_image"
                    android:background="@drawable/nodatafound"
                    android:layout_height="88dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/main_lay"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_height="wrap_content">
<!--<LinearLayout-->
<!--    android:layout_marginBottom="@dimen/_4sdp"-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:orientation="horizontal"-->
<!--    android:layout_weight="1"-->
<!--    android:id="@+id/second_lay"-->
<!--    android:layout_marginRight="@dimen/_5sdp"-->
<!--    android:layout_marginLeft="@dimen/_5sdp">-->
                <TextView
                    android:id="@+id/episodeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/heebo_medium"
                    android:maxLines="2"
                    android:text="Ep:1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fontFamily="@font/heebo_medium"
        android:maxLines="2"
        android:text="The Lord Kingdom"
        android:textColor="@color/white"
        android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/heebo_regular"
                    android:maxLines="2"
                    android:text="56min"
                    android:textColor="@color/search_sub_title"
                    android:textSize="16sp" />

            </LinearLayout>


<!--            <LinearLayout-->
<!--                android:id="@+id/download_icon"-->
<!--                android:layout_width="24dp"-->
<!--                android:layout_marginRight="@dimen/_5sdp"-->
<!--              android:layout_marginEnd="16sp"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:layout_height="24dp">-->
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:rotation="270"
                    android:id="@+id/downloadIcon"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/blue_bg"
                    android:src="@drawable/ic_baseline_arrow_back"
                    />


<!--            </LinearLayout>-->



        </LinearLayout>



        <LinearLayout
            android:id="@+id/clRoot"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintDimensionRatio="H,16:9"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:ellipsize="end"
                android:fontFamily="@font/heebo_regular"
                android:maxLines="3"
               android:lineSpacingExtra="8sp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:text="While Bran recovers from his fall, Ned takes only his daughters to King's Landing. Jon Snow goes with his uncle Benjen to the Wall. Tyrion joins them."
                android:textColor="@color/search_sub_title"
                android:textSize="14sp" />


        </LinearLayout>






    </LinearLayout>



</layout>
