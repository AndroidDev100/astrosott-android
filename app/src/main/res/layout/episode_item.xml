<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/grape_purple"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/play_lay"
                android:layout_width="155dp"
                android:layout_height="88dp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/landscape_image"
                    android:layout_width="155dp"
                    android:layout_height="88dp"
                    android:background="@drawable/ic_landscape_placeholder"
                    android:scaleType="fitXY"
                    android:contentDescription="TODO" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:progressDrawable="@drawable/gradient_progess"
                    android:visibility="gone" />



                <FrameLayout
                    android:id="@+id/episode_transparent"
                    android:layout_width="155dp"
                    android:layout_height="88dp"
                    android:background="@color/episode_transparent"
                    android:visibility="gone">

                </FrameLayout>
                <ImageView
                    android:id="@+id/lock_icon"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/ic_lock"
                    android:contentDescription="TODO">

                </ImageView>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/main_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--<LinearLayout-->
                <!--    android:layout_marginBottom="@dimen/_4sdp"-->
                <!--    android:layout_width="wrap_content"-->
                <!--    android:layout_height="wrap_content"-->
                <!--    android:orientation="horizontal"-->
                <!--    android:layout_weight="1"-->
                <!--    android:id="@+id/second_lay"-->
                <!--    android:layout_marginRight="@dimen/_5sdp"-->
                <!--    android:layout_marginLeft="@dimen/_5sdp">-->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/heebo_medium"

                    android:lineHeight="24sp"
                    android:maxLines="2"
                    android:textColor="@color/title_color"
                    android:textSize="16sp"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/tvduration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/heebo_regular"
                    android:lineHeight="24sp"
                    android:maxLines="2"
                    android:textColor="@color/yellow_orange"
                    android:textSize="14sp"
                    tools:targetApi="p" />

            </LinearLayout>


            <!--            <LinearLayout-->
            <!--                android:id="@+id/download_icon"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_marginRight="@dimen/_5sdp"-->
            <!--              android:layout_marginEnd="16sp"-->
            <!--                android:gravity="center_horizontal"-->
            <!--                android:layout_marginTop="@dimen/_10sdp"-->
            <!--                android:layout_height="24dp">-->
            <ImageButton
                android:id="@+id/downloadIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="16dp"
                android:background="@color/blue_bg"
                android:rotation="270"
                android:src="@drawable/ic_baseline_arrow_back"
                android:visibility="gone"
                android:contentDescription="TODO" />


            <!--            </LinearLayout>-->


        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:ellipsize="end"
            android:fontFamily="@font/heebo_regular"
            android:lineHeight="24sp"
            android:lineSpacingExtra="8sp"
            android:maxLines="3"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/title_color"
            android:textSize="14sp"
            tools:targetApi="p" />


    </LinearLayout>


</layout>
