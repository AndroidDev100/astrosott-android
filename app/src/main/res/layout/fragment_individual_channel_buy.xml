<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cod_gray">


        <LinearLayout
            android:id="@+id/lnChannelTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen8dp"
            android:weightSum="2">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher"
                android:layout_weight=".7"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/dimen10dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtChannelTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen15dp"
                    android:text="UTV"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp20" />
                <TextView
                    android:id="@+id/txtChannelDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginLeft="@dimen/dimen5dp"
                    android:layout_marginTop="@dimen/dimen5dp"
                    android:text="UTV(formely Ulste Television)is a British free-to-air  channel owned and operated... UTV HD, asimulcast of UTV in hig definition was launched on virgin Media on 5 October 2018."
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp15" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnPackageDescription"
            android:layout_width="@dimen/dimen200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnChannelTitle"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                android:padding="2dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="30sp"
                    android:text="Rs 99"
                    android:padding="@dimen/dimen2dp"
                    android:textColor="@color/white"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="21sp"
                    android:text="per month"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@id/view"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Unlimited stream"
                android:drawablePadding="10dp"
                android:layout_marginTop="@dimen/dimen8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Unlimited stream"
                android:drawablePadding="10dp"
                android:layout_marginTop="@dimen/dimen8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Unlimited stream"
                android:layout_marginTop="@dimen/dimen8dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Unlimited stream"
                android:layout_marginTop="@dimen/dimen8dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                android:text="Unlimited stream"
                android:layout_marginTop="@dimen/dimen8dp"
                android:drawablePadding="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want to buy?"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="@dimen/dimen25dp"
            android:layout_above="@id/lnButton"
            android:layout_marginBottom="@dimen/dimen25dp"/>

        <LinearLayout
            android:id="@+id/lnButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp50"
            android:layout_marginRight="@dimen/dp50"
            android:layout_marginBottom="@dimen/dimen15dp"
            android:orientation="vertical"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_red_button"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/dimen10dp"
                android:text="Buy Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/dimen10dp"
                android:text="No, I have changed my mind"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_connection_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <include
                android:id="@+id/connection"
                layout="@layout/no_connection" />
        </LinearLayout>

    </RelativeLayout>

</layout>